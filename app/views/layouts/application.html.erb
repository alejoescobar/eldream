<!DOCTYPE html>
<html>
<head>
  <title>ElDream</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="container">

<% if !notice.nil? %>
  <p class="notice"><%= notice %></p>
<% end %>
<% if !alert.nil? %>
  <p class="alert"><%= alert %></p>
<% end %>

<%= render "layouts/navigation" %>

<%= yield %>

<%= render "layouts/footer" %>

  </div>
</body>
</html>
